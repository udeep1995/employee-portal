<%- include('partials/header.ejs') %>

<div class="col-md-5 col-md-offset-3" style="margin-top: 5%;"> 
<form action="/api/jobs/edit-position/<%=job._id%>" method="POST">
    <div class="form-group">
      <label>Project Name</label>
      <input type="text" name="projectname" class="form-control" required placeholder="Enter Project Name" value = '<%=job.projectname%>'>
    </div>
    <div class="form-group">
        <label>Client Name</label>
        <input type="text" name="clientname" class="form-control" required placeholder="Enter Client Name" value = '<%=job.clientname%>'>
      </div>
      <div class="form-group">
        <label>Technologies</label>
        <input type="text" name="technologies" class="form-control" required placeholder="Enter Technologies Comma separated" value = '<%=job.technologies%>'>
      </div>
      <div class="form-group">
        <label>Role</label>
        <input type="text" name="role" class="form-control" required placeholder="Enter Role" value = '<%=job.role%>'>
      </div>
      <div class="form-group">
        <label>Job Description</label>
        <input type="text" name="jobdescription" class="form-control" required placeholder="Enter Job Description" value = '<%=job.jobdescription%>'>
      </div>
      <div class="form-group">
        <label>Status: </label>
        <input type="radio" name="status" value="true" >Open
        <input type="radio" name="status" value="false" >Closed
      </div>
    <div class="col-md-offset-10">
        <input type="submit" class="btn btn-primary" value="Update Position"></input>
      </div>
    </div>
  </form>
</div>